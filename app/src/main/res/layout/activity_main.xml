<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/primoNumero"
            android:padding="16dp"
        android:text="Primo Numero"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/secondoNumero"
        android:padding="16dp"
        android:gravity="center"
        android:text="Secondo Numero"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/incrementaPrimoNumero"
        android:text="AumentaPrimoNumero"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/incrementaSecondoNumero"
        android:text="AumentaSecondoNumero"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/risultato"
        android:padding="16dp"
        android:gravity="center"
        android:text="Risultato"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>